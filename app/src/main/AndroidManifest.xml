<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.roadsidepoppies.indietracks.guide">

    <application
        android:name="com.roadsidepoppies.indietracks.guide.IndietracksApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_indietracks"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name="com.roadsidepoppies.indietracks.guide.InitialiseDataActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:noHistory="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.roadsidepoppies.indietracks.guide.IndietracksMainActivity">
            <intent-filter>
                <action android:name="com.roadsidepoppies.indietracks.guide.INDIETRACKS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.roadsidepoppies.indietracks.guide.InfoActivity">
            <intent-filter>
                <action android:name="com.roadsidepoppies.indietracks.guide.INFO" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.roadsidepoppies.indietracks.guide.settings.SettingsActivity">
            <intent-filter>
                <action android:name="com.roadsidepoppies.indietracks.guide.SETTINGS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <receiver android:name="com.roadsidepoppies.indietracks.guide.alarm.EventAlarmReceiver">
            <intent-filter>
                <action android:name="com.roadsidepoppies.indietracks.guide.EVENTALARM"></action>
            </intent-filter>
        </receiver>
        <receiver android:name="com.roadsidepoppies.indietracks.guide.alarm.DeviceRebootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"></action>
            </intent-filter>
        </receiver>
    </application>
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
</manifest>